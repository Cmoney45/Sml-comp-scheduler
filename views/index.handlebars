                <label class="tableLable">In</label>
                <input type="text" class="timepicker tableInput" id="tueIn{{id}}">
                <label class="tableLable">Out</label>
                <input type="text" class="timepicker tableInput" id="tueOut{{id}}">
            </td>
            {{else}}
            <td></td>
            {{/if}}
            {{#if wednesdayAvailable}}
            <td>
                <label class="tableLable">In</label>
                <input type="text" class="timepicker tableInput" id="wedIn{{id}}">
                <label class="tableLable">Out</label>
                <input type="text" class="timepicker tableInput" id="wedOut{{id}}">
            </td>
            {{else}}
            <td></td>
            {{/if}}

            {{#if thursdayAvailable}}
            <td>
                <label class="tableLable">In</label>
                <input type="text" class="timepicker tableInput" id="thurIn{{id}}">
                <label class="tableLable">Out</label>
                <input type="text" class="timepicker tableInput" id="thurOut{{id}}">
            </td>
            {{else}}
            <td></td>
            {{/if}}

            {{#if fridayAvailable}}
            <td>
                <label class="tableLable">In</label>
                <input type="text" class="timepicker tableInput" id="friIn{{id}}">
                <label class="tableLable">Out</label>
                <input type="text" class="timepicker tableInput" id="friOut{{id}}">
            </td>
            {{else}}
