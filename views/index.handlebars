<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
<script>
    $("body").css("background-image", "url('../images/ySLiJ.jpg')");
    $(".container").css("width", "85%");
    $(document).ready(function () {
   
        // sticky header
        window.onscroll = function () { headerStick() };

        var header = document.getElementById("tableHead");
        var sticky = header.offsetTop;

        function headerStick() {
            if (window.pageYOffset > sticky) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
        }
   
            // Post Button
        $(document).on("click", ".post", () => {
            let id = $(this)[0].activeElement.id
            let newPost = {
                name: $(`#name${id}`).text(),
                sunStart: $(`#sunIn${id}`).val(),
                sunEnd: $(`#sunOut${id}`).val(),
                monStart: $(`#monIn${id}`).val(),
                monEnd: $(`#monOut${id}`).val(),
                tueStart: $(`#tueIn${id}`).val(),
                tueEnd: $(`#tueOut${id}`).val(),
                wedStart: $(`#wedIn${id}`).val(),
                wedEnd: $(`#wedOut${id}`).val(),
                thurStart: $(`#thurIn${id}`).val(),
                thurEnd: $(`#thurOut${id}`).val(),
                friStart: $(`#friIn${id}`).val(),
                friEnd: $(`#friOut${id}`).val(),
                satStart: $(`#satIn${id}`).val(),
                satEnd:$(`#satOut${id}`).val()
                }
                console.log(newPost);
                submitNewSchedule();
        });
        const submitNewSchedule = newPost => {
            $.post("/api/scheduler/", newPost, () => {
                console.log("posted");
            });
        };
    });

</script>
