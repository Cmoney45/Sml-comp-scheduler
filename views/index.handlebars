<table class="container">
    <thead>
        <tr id="tableHead">
            <th>Employee Name</th>
            <th>Employee Total hours</th>
            <th>Sunday</th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
        </tr>
    </thead>
    <tbody>
        {{#each users }}
        <tr id="{{id}}">
            <td>{{userLastName}}, {{userFirstName}}</td>
            <td class="totalHours"></td>

            {{#if sundayAvailable}}
            <td>
                <label class="tableLable">In</label>
                <input type="text" class="timepicker tableInput" id="sunIn{{id}}">
                <label class="tableLable">Out</label>
                <input type="text" class="timepicker tableInput" id="sunOut{{id}}">
            </td>
            {{else}}
            <td></td>
            {{/if}}

            {{#if mondayAvailable}}
            <td>
                <label class="tableLable">In</label>
                <input type="text" class="timepicker tableInput" id="monIn{{id}}">
                <label class="tableLable">Out</label>
                <input type="text" class="timepicker tableInput" id="monOut{{id}}">
            </td>
            {{else}}
            <td></td>
            {{/if}}

            {{#if tuesdayAvailable}}
