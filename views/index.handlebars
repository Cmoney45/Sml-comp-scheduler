            {{/if}}

            {{#if saturdayAvailable}}
            <td>
                <label class="tableLable">In</label>
                <input type="text" class="timepicker tableInput" id="satIn{{id}}">
                <label class="tableLable">Out</label>
                <input type="text" class="timepicker tableInput" id="satOut{{id}}">
            </td>
            {{else}}
            <td></td>
            {{/if}}
        </tr>
        {{/each}}

    </tbody>
</table>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
<script>
    $("body").css("background-image", "url('../images/ySLiJ.jpg')");
    const timer = document.querySelector('.timepicker');
    M.Timepicker.init(timer, {});

    window.onscroll = function () { headerStick() };

    var header = document.getElementById("tableHead");
    var sticky = header.offsetTop;

    function headerStick() {
        if (window.pageYOffset > sticky) {
            header.classList.add("sticky");
        } else {
            header.classList.remove("sticky");
        }
    }

</script>